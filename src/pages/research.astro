---
import Layout from "@/layouts/Layout.astro";
import { profile } from "@/settings";
import BetterIcon from "@/components/ui/BetterIcon.astro";
import List from "@/components/ui/List.astro";
import {RESEARCH_ICONS} from "@/data/researchIcons";

const { research_areas } = profile;
---

<Layout title="Research">
  <div class="prose max-w-none">
    <h1 class="text-3xl font-bold mb-8">Research Statement</h1>

    <div class="mb-12">
      <p class="text-lg mb-6">
        My research focuses on <em>transient astrophysics</em> â€” the study of astrophysical phenomena that appear, evolve, and fade on short cosmic timescales.
      </p>
    </div>

    <h2 class="text-2xl font-bold mb-6">Research Areas</h2>
    <div class="grid gap-3 mb-12">
      {
        research_areas.map((area) => (
            <div class="flex gap-6 items-start">
            <!--
              <BetterIcon>
                {area.icon ? (
                  <img
                    src={area.icon}
                    alt={`${area.title} icon`}
                    class="w-20 h-20 object-cover rounded"
                  />
                ) : (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke-width="2"
                    class="size-6 stroke-accent"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d={RESEARCH_ICONS[area.field as keyof typeof RESEARCH_ICONS]?.path || RESEARCH_ICONS['computer-science'].path}
                    />
                  </svg>
                )}
              </BetterIcon>
                -->
                
                {area.icon ? (
                  <img
                    src={area.icon}
                    alt={`${area.title} icon`}
                    class="w-20 h-20 object-cover rounded flex-none"
                  />
                ) : (
                  <BetterIcon>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke-width="2"
                      class="size-6 stroke-accent"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d={RESEARCH_ICONS[area.field as keyof typeof RESEARCH_ICONS]?.path || RESEARCH_ICONS['computer-science'].path}
                      />
                    </svg>
                  </BetterIcon>
                )}

                
                
              <div>
                <h3 class="text-xl font-semibold mb-2">
                    {area.slug ? <a href={`/research/${area.slug}`} class="link link-hover">{area.title}</a> : area.title}
                </h3>
                
                
                <p class="text-base">{area.description}</p>
              </div>
            </div>
        ))
      }
    </div>

    <List
      listTitle="Current Projects"
      listItems={[
        {
          title: "BlackGEM",
          href: "/research/surveys#blackgem",
          description:
            "An array of telescopes searching for electromagnetic counterparts of gravitational waves and conducting wide-field transient surveys in the southern hemisphere."
        },
        {
          title: "Rubin LSST",
          href: "/research/surveys#lsst",
          description:
            "The Legacy Survey of Space and Time conducted with the Vera C. Rubin Observatory, transforming time-domain astronomy through scale and depth."
        },
        {
          title: "ENGRAVE",
          href: "/research/GW#engrave",
          description:
            "A large European collaboration using ESO facilities to follow up gravitational-wave events and their electromagnetic counterparts."
        }
      ]}
    />
  </div>
</Layout>
